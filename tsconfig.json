{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2016",                         // Set the JavaScript language version
    "module": "commonjs",                       // Specify module code generation method
    "outDir": "./dist",                         // Redirect output structure to the directory
    "esModuleInterop": true,                    // Enables emission of interoperability support
    "forceConsistentCasingInFileNames": true,   // Ensure that casing is correct in imports
    "strict": true,                             // Enable all strict type-checking options
    "skipLibCheck": true,                       // Skip type checking of all declaration files (*.d.ts)

    /* Module Resolution Options */
    "moduleResolution": "node",                 // Resolve modules using Node.js style
    "baseUrl": ".",                             // Base directory to resolve non-absolute module names
    "paths": {                                  // Specify paths for aliases
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,                  // Allow JSON modules to be imported

    /* Additional Checks */
    "noImplicitAny": true,                      // Raise error on expressions and declarations with an implied 'any' type
    "strictNullChecks": true,                   // Consider null and undefined in type checking

    /* Source Map Options */
    "sourceMap": true,                           // Enables the generation of sourcemap files

    /* Experimental Options */
    "typeRoots": ["node_modules/@types","./src/types"],       // List of folders to include type definitions from
    "types": ["node"],                          // Type declaration files to be included in compilation
  },
  "include": [
    "src/**/*.ts",
    "app.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
